{% extends 'MaximeLEAUJobeetBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/maximeleaujobeet/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}

{% block content %}
    <div id="jobs">
        {% for category in categories %}
            <div class="category_{{ category.slug }}">
                <div class="category">
	                <div class="feed">
					    <a href="{{ path('MaximeLEAUJobeetBundle_category', { 'slug': category.slug, '_format': 'atom' }) }}">Feed</a>
					</div>
                    <h1><a href="{{ path('MaximeLEAUJobeetBundle_category', { 'slug': category.slug }) }}">{{ category.name }}</a></h1>
                </div>
                
				{{ include ('MaximeLEAUJobeetBundle:Job:list.html.twig', {'jobs': category.activejobs}) }}
                
                {% if category.morejobs %}
			        <div class="more_jobs">
			            {% trans with {'%count%': '<a href="' ~ path('MaximeLEAUJobeetBundle_category', { 'slug': category.slug }) ~ '">' ~  category.morejobs ~ '</a>'} %}and %count% more...{% endtrans %}
			        </div>
			    {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
